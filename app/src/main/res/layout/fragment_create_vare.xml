<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruben.hobbyhuset.CreateVareFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textView_vareNr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_vareNr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_vareNr"
            android:hint="Varenummer"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textView_betegnelse"
        android:layout_below="@id/textView_vareNr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_betegnelse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_betegnelse"
            android:hint="Betegnelse"
            android:inputType="textCapWords" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textView_pris"
        android:layout_below="@id/textView_betegnelse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_pris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_pris"
            android:hint="Pris"
            android:inputType="numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textView_antall"
        android:layout_width="match_parent"
        android:layout_below="@id/textView_pris"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_antall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_pris"
            android:hint="Antall"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_below="@id/textView_antall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lag ny vare"/>


</RelativeLayout>
